{{ 'custom-form.css' |  asset_url |  stylesheet_tag }}
<script src="{{ 'custom-form.js' | asset_url }}" defer="defer"></script>

<div class="form-wrapper page-width ">
  <h2 class="form-header">
    {{ section.settings.headerText }}
  </h2>

  <div class="form-inputs">
    <input id="{{section.id}}-destinationEmail" value="{{section.settings.emailDestination}}" class="hidden">
    <input id="{{section.id}}-form-input-name" required name="name" type="text" placeholder="name">
    <input id="{{section.id}}-form-input-phone" required name="phone" type="tel" placeholder="phone">
    <textarea id="{{section.id}}-form-input-message" required placeholder="message" name="message"></textarea>
  </div>

  <button id="{{section.id}}" onclick="onSubmit('{{section.id}}')" type="submit" class="submit-button">
    {{ section.settings.buttonText }}
  </button>
</div>

{% schema %}
{
  "name": "Contact Us Form",
  "tag": "section",
  "limit": 2,
  "class": "contact-us-form",
  "presets": [
    {
      "name": "Merch Contact Form",
      "settings": {
        "headerText": "FOR MERCHANDISE",
        "emailDestination": "merch@aryahungry.ca"
      }
    },
    {
      "name": "Business Contact Form",
      "settings": {
        "headerText": "FOR BUSINESS",
        "emailDestination": "management@aryahungry.ca"
      }
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "emailDestination",
      "label": "Send To(Email address)"
    },
    {
      "type": "text",
      "id": "headerText",
      "label": "Header Text"
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "Button Text",
      "default": "SUBMIT"
    }
  ]
}
{% endschema %}
